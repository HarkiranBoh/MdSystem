@model ShoppingCartViewModel


<h2>Your shopping cart</h2>

<div><a asp-controller="Equipment" asp-action="Index">  Back to shopping  </a></div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Remove</th>
            <th>Quantity<div class="text-right"><a class="btn btn-link" href="#">Update</a></div></th>
            <th>Equipment</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center"><input type="checkbox" asp-controller="ShoppingCart" asp-action="RemoveFromCart"/> </td>
                <td class="text-center"><input type="text" name="quantity" value="@line.Amount" /></td>
                <td class="text-left">@line.Equipment.Name</td>
                <td class="text-right">@line.Equipment.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.Equipment.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out</a>
</div>

<div class="text-right">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearCart">Clear</a>
</div>